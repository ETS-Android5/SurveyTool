<?xml version="1.0" encoding="utf-8"?>
<selector
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/myselector">
   <!-- Non focused states -->
   <item
	  android:drawable="@color/oc_yellow_1"
	  android:state_focused="false"
	  android:state_pressed="false"
	  android:state_selected="false"/>
   <item
	  android:drawable="@color/selectblack"
	  android:state_focused="false"
	  android:state_pressed="false"
	  android:state_selected="true"/>
   <!-- Focused states -->
   <item
	  android:drawable="@color/oc_yellow_3"
	  android:state_focused="true"
	  android:state_pressed="false"
	  android:state_selected="false"/>
   <item
	  android:drawable="@color/bright_foreground_dark_disabled"
	  android:state_focused="true"
	  android:state_pressed="false"
	  android:state_selected="true"/>

   <!-- Pressed -->
   <item
	  android:drawable="@color/perms_dangerous_perm_color"
	  android:state_pressed="true"/>
</selector>