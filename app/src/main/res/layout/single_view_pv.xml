<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

   <ImageView
	  android:id="@+id/iv_photo"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent"
	  android:scaleType="center"
	  android:adjustViewBounds="true"
	  />

   <LinearLayout
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:orientation="horizontal"
	  android:background="@color/shadow_description"
	  android:layout_alignParentBottom="true"
	  android:id="@+id/textbar"
	  android:weightSum="100"
	  android:minHeight="60dp">

	  <TextView
		 android:layout_weight="95"
		 android:layout_width="wrap_content"
		 android:layout_height="wrap_content"
		 android:padding="5dp"
		 android:text="The description will be apploed here"
		 android:textSize="15sp"
		 android:paddingTop="20dp"
		 android:paddingBottom="20dp"
		 android:textIsSelectable="false"
		 android:id="@+id/photo_view_description"
		 android:textColor="@color/custom_text_color_normal"/>

	  <ImageButton
		 android:layout_weight="5"
		 android:layout_width="50dp"
		 android:layout_height="match_parent"
		 android:src="@drawable/ic_editor_pencil_pen_edit_write_"
		 android:id="@+id/bn_change_description"
		 style="@style/action_bar_button"
		 android:layout_alignParentRight="true"
		 android:layout_gravity="center_vertical"
		 android:cropToPadding="false"/>

   </LinearLayout>
</RelativeLayout>
